          // N·∫øu kh√¥ng c√≥ truy v·∫•n, ·∫©n to√†n b·ªô controls
          controls.style.display = 'none';
      }
    }
    // --- H·∫æT H√ÄM M·ªöI ---

    // Th·ª±c hi·ªán t√¨m ki·∫øm
    function performSearch(query) {
      // Lu√¥n c·∫≠p nh·∫≠t truy v·∫•n hi·ªán t·∫°i
      searchState.currentQuery = query.trim();

      if (!searchState.currentQuery) {
        closeSearch();
        return;
      }

      removeHighlight();
      searchState.searchResults = [];

      const normalizedQuery = removeDiacritics(searchState.currentQuery.toLowerCase());
      // ===T√åM KI·∫æM TO√ÄN DI·ªÜN WEB ===
      // M·ªü r·ªông ph·∫°m vi t√¨m ki·∫øm ƒë·ªÉ bao g·ªìm nhi·ªÅu lo·∫°i ph·∫ßn t·ª≠ vƒÉn b·∫£n h∆°n
      const elements = document.querySelectorAll('h1, h2, h3, h4, h5, h6, p, li, td, th, div.introduction-content, div.update-details, div.footer-info, div.hero, div.update-item, span:not(.nav-btn):not(.close-btn):not(.dropbtn), a:not(.chat-btn), .widget, .feature, .testimonial, .event, .tab-content, .widget p, .widget li, .update-details p, .footer-container *, .sidebar *'
);
// === H·∫æT PH·∫¶N S·ª¨A ===

      elements.forEach(el => {
        const text = el.innerText;
        if (removeDiacritics(text).toLowerCase().includes(normalizedQuery)) {
          const context = text.length > 100 ? text.substr(0, 100) + '...' : text;
          searchState.searchResults.push({ element: el, context });
        }
      });

      // Hi·ªÉn th·ªã k·∫øt qu·∫£ (d√π c√≥ hay kh√¥ng)
      displayResults();
      // C·∫≠p nh·∫≠t giao di·ªán ƒëi·ªÅu khi·ªÉn
      updateSearchControls();

      // N·∫øu c√≥ k·∫øt qu·∫£, ƒëi t·ªõi k·∫øt qu·∫£ ƒë·∫ßu ti√™n
      if (searchState.searchResults.length > 0) {
        goToResult(0);
      }
      // N·∫øu kh√¥ng c√≥ k·∫øt qu·∫£, displayResults() ƒë√£ hi·ªÉn th·ªã th√¥ng b√°o r·ªìi
    }

    // ƒê√≥ng t√¨m ki·∫øm
    function closeSearch() {
      removeHighlight();
      const input = document.getElementById('search-input');
      input.value = '';
      document.getElementById('search-results').style.display = 'none';
      document.getElementById('search-controls').style.display = 'none'; // ·∫®n to√†n b·ªô controls khi ƒë√≥ng
      searchState.searchResults = [];
      searchState.currentResultIndex = -1;
      searchState.currentQuery = '';
      // Kh√¥ng c·∫ßn g·ªçi th√™m updateSearchControls() v√¨ ƒë√£ ·∫©n r·ªìi
    }

    // G·∫Øn s·ª± ki·ªán
    document.addEventListener('DOMContentLoaded', () => {
      const input = document.getElementById('search-input');
      const prevBtn = document.getElementById('search-prev');
      const nextBtn = document.getElementById('search-next');
      const closeBtn = document.getElementById('search-close');

      // ====== KH·ªûI T·∫†O: ·∫®n controls v√† k·∫øt qu·∫£ khi t·∫£i trang ======
      document.getElementById('search-controls').style.display = 'none';
      document.getElementById('search-results').style.display = 'none';
      // ====== H·∫æT KH·ªûI T·∫†O ======

      // ====== X·ª¨ L√ù KHI NG∆Ø·ªúI D√ôNG T∆Ø∆†NG T√ÅC V·ªöI √î INPUT ======
      // Khi focus ho·∫∑c click v√†o input, hi·ªÉn th·ªã n√∫t Close
      const handleUserInteraction = () => {
          if (input.value.trim() !== '' || event.type === 'click') {
              document.getElementById('search-controls').style.display = 'flex';
              // ·∫®n m≈©i t√™n
              document.getElementById('search-prev').style.display = 'none';
              document.getElementById('search-next').style.display = 'none';
              // Hi·ªán close
              document.getElementById('search-close').style.display = 'flex';
          }
          // N·∫øu c√≥ n·ªôi dung, th·ª±c hi·ªán t√¨m ki·∫øm ngay
          if (input.value.trim().length >= 2) {
              performSearch(input.value.trim());
          }
      };
      input.addEventListener('focus', handleUserInteraction);
      input.addEventListener('click', handleUserInteraction);

      // X·ª≠ l√Ω khi ng∆∞·ªùi d√πng g√µ v√†o √¥ t√¨m ki·∫øm
      input.addEventListener('input', () => {
        const query = input.value.trim();
        if (query.length >= 2) {
          performSearch(query);
          saveSearchHistory(query);
        } else {
          // N·∫øu √≠t h∆°n 2 k√Ω t·ª±, ·∫©n k·∫øt qu·∫£ nh∆∞ng c√≥ th·ªÉ v·∫´n hi·ªán n√∫t Close n·∫øu ƒë√£ c√≥ t∆∞∆°ng t√°c
          document.getElementById('search-results').style.display = 'none';
          searchState.currentQuery = query;
          searchState.searchResults = [];
          searchState.currentResultIndex = -1;
          removeHighlight();
          
          // N·∫øu ƒë√£ c√≥ t∆∞∆°ng t√°c (v√≠ d·ª• g√µ r·ªìi x√≥a), v·∫´n hi·ªán close
          if (query.length > 0) {
              document.getElementById('search-controls').style.display = 'flex';
              document.getElementById('search-prev').style.display = 'none';
              document.getElementById('search-next').style.display = 'none';
              document.getElementById('search-close').style.display = 'flex';
          } else {
              // N·∫øu √¥ tr·ªëng ho√†n to√†n, ·∫©n controls
              document.getElementById('search-controls').style.display = 'none';
          }
        }
      });
      // ====== H·∫æT X·ª¨ L√ù INPUT ======

      // X·ª≠ l√Ω Enter
      input.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') performSearch(input.value.trim());
      });

      // X·ª≠ l√Ω n√∫t Previous
      prevBtn.addEventListener('click', () => {
        if (searchState.searchResults.length > 0) {
          const prev = (searchState.currentResultIndex - 1 + searchState.searchResults.length) % searchState.searchResults.length;
          goToResult(prev);
        }
      });

      // X·ª≠ l√Ω n√∫t Next
      nextBtn.addEventListener('click', () => {
        if (searchState.searchResults.length > 0) {
          const next = (searchState.currentResultIndex + 1) % searchState.searchResults.length;
          goToResult(next);
        }
      });

      // X·ª≠ l√Ω n√∫t Close
      closeBtn.addEventListener('click', closeSearch);

      // X·ª≠ l√Ω ph√≠m Esc
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeSearch();
      });
    });

  </script>
